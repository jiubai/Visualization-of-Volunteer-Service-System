<aiml version="0.9.2" encoding="UTF-8">
    <!-- std-startup.xml -->

    <!-- <category> 作为AIML的原子级单元 -->
    <category>

        <!-- 匹配用户输入的模式 -->
        <!-- 如果用户输入 "LOAD B" -->
        <pattern>LOAD AIML PATTERN</pattern>

        <!-- <Template> 用来响应模式 -->
        <!-- <learn>是一个aiml文件 -->
        <template>
            <learn>basic_chat.aiml</learn>
            <learn>volun_qa.aiml</learn>
            <learn>learning_chat.aiml</learn>
            <!-- 在这下面你能添加更多的aiml文件 -->
        </template>

    </category>

</aiml>